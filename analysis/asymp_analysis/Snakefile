import pandas as pd
import os

# Snakefile Last edit: 02/21/2018 

# Usage
## Dry run to check if snakefile works
# snakemake --nolock --cluster "qsub -P mlhd -cwd -pe omp {threads}" --jobs 50 -np
## Actual run
# snakemake --nolock --cluster "qsub -P mlhd -cwd -pe omp {threads}" --jobs 10

design_info = os.path.abspath("../../samples/Analysis_Results/asymp_info_design.csv")
firth = os.path.abspath("../../samples/Analysis_Results/asymp_firth.tsv")

rule all:
  input:
    design_info,
    firth,

# Outputs ordered sample info with subject type and age
rule design_info:
  input:"asymp_design.py"
  output:
    info = os.path.abspath("../../samples/Analysis_Results/asymp_info_design.csv"),
    filt = os.path.abspath("../../samples/Analysis_Results/asymp_filter.csv")
  shell:
    "python {input}"

# Normalize counts
rule norm:
  input:os.path.abspath("../../samples/Analysis_Results/asymp_filter.csv")
  output:os.path.abspath("../../samples/Analysis_Results/asymp_norm.csv")
  shell:
    """detk-norm deseq2 {input} -o {output}"""

# DE Firth
rule firth:
  input:
    counts = os.path.abspath("../../samples/Analysis_Results/asymp_norm.csv"),
    info= os.path.abspath("../../samples/Analysis_Results/asymp_info_design.csv")
  params:
    design="Subject_type[BA9] ~ Subject_death + counts"
  output:os.path.abspath("../../samples/Analysis_Results/asymp_firth.tsv")
  shell:
    """detk-de firth "{params.design}" {input.counts} {input.info} -o {output}"""

