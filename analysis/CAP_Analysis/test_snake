# Snakefile

head = "head_norm.csv"
firth = "head_firth.csv"

rule all:
  input:
    head,
    firth

rule head_norm:
  input:"CAP_salmon_norm.csv"
  output:"head_norm.csv"
  shell:
    "head -n 500 {input} > {output}"

rule firth_test:
  input:
    counts="head_norm.csv",
    info="CAP_info_design.csv"
  params:
    design="Subject.subject_type ~ Subject.death"
  output: "head_firth.csv"
  shell:
    """detk-de firth "{params.design}" {input.counts} {input.info} -o {output}"""
